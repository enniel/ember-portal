<div class="section">
  <span class="template-name">example/bar/baz.hbs</span>

  {{#portal-content for="header" as |args|}}
    <div id="baz-header" class="header">
      Baz {{args.title}} - defined in example/bar/baz.hbs
    </div>
  {{/portal-content}}

  {{#portal-content for="footer" as |args|}}
    <div id="baz-footer" class="footer">
      Baz {{args.title}} - defined in example/bar/baz.hbs
    </div>
  {{/portal-content}}

  <p>
    This sets both portals, so overrides its parents
    and shows the "Baz Header" and "Baz Footer".
  </p>
</div>
